<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="video">
     <div class="container--full">
        <div class="grid grid--middle grid--flush">
            <div class="1/2--lap-and-up grid__cell">
                <div class="video__box responsive-video">
                    <iframe width="100%" height="100%" src="{{ section.settings.video_url }}?autoplay=1&controls=0;" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            <div class="1/2--lap-and-up grid__cell">
               {% include 'image' with img : section.settings.image , class: 'full-width' %}
            </div>
        </div>
     </div>
 </section>
{% schema %}
{
  "name": "Video section",
  "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "label"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "video embed url",
          "default": "https://www.youtube.com/embed/_9VUPq3SxOc"
        }
  ]
}
{% endschema %}
